

<section style="margin-bottom: 10px d-flex p-2">
    <input type="text" class="form-control" placeholder="@PlaceHolder"
           @bind-value="@SearchTerm" @bind-value:event="oninput" @onchange="async () => await OnSearchChanged.InvokeAsync(SearchTerm)" />
</section>

@code{
    /// <summary>
    /// hepler text
    /// </summary>
    [Parameter]
    public string PlaceHolder { get; set; }
    /// <summary>
    /// chaine de caractère de recherche
    /// </summary>
    public string SearchTerm { get; set; }
    /// <summary>
    /// Parametre: notification de chaine de caractère de recherche
    /// </summary>
    [Parameter]
    public EventCallback<string> OnSearchChanged { get; set; }
}